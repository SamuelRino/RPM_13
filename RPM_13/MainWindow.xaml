<Window x:Class="RPM_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM_13"
        mc:Ignorable="d"
        Title="Практическая 13" Height="450" Width="800" MinHeight="260" MinWidth="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                
            </MenuItem>

            <MenuItem Header="Инфо">
                
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1">
            
        </ToolBar>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Исходные данные" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dg" Grid.Row="0" CanUserAddRows="False" PreviewKeyDown="dg_PreviewKeyDown" PreviewTextInput="dg_PreviewTextInput" />

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="Строк:" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_rows" VerticalAlignment="Center" Width="60" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly"/>
                        
                        <Label Content="Столбцов:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="tb_columns" VerticalAlignment="Center" Width="60" PreviewKeyDown="tb_PreviewKeyDown_NumberOnly"/>

                        <Button x:Name="btn_SetSize" Content="Установить" VerticalAlignment="Center" Margin="20,0,0,0" Click="btn_SetSize_Click" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Результат" BorderBrush="Black">
                <StackPanel>
                    <Label Content="Номер столбца:" HorizontalAlignment="Center"/>
                    <TextBox x:Name="tb_ColumnRes" Width="80" IsReadOnly="True"/>

                    <Label Content="Значение:" HorizontalAlignment="Center"/>
                    <TextBox x:Name="tb_ValueRes" Width="60" IsReadOnly="True"/>

                    <Button x:Name="btn_Calculate" Content="Рассчитать" HorizontalAlignment="Center" Margin="15" Click="btn_Calculate_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <StatusBar Grid.Row="3">
            <TextBlock Text="Размер:"/>
            <Separator/>
            <TextBlock Text="Номер ячейки:"/>
        </StatusBar>
    </Grid>
</Window>
